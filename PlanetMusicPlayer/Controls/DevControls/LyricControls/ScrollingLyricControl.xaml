<UserControl
    x:Class="PlanetMusicPlayer.Controls.DevControls.LyricControls.ScrollingLyricControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PlanetMusicPlayer.Controls.DevControls.LyricControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400" Unloaded="UserControl_Unloaded">

    <Grid>
        <ScrollViewer Name="ContentScrollViewer" VerticalScrollBarVisibility="Hidden" SizeChanged="lyricScrollViewer_SizeChanged" Height="500">
            <StackPanel Name="ContentStackPanel">
                <TextBlock/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
